@model IEnumerable<Capstone.Models.Itinerary>

@{
    ViewData["Title"] = "ItineraryListByUser";
}

<h2>Your Itineraries</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                
                <a asp-action="Itinerary" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-controller="Home" asp-action="CreateItinerary"><div>Create New Itinerary</div></a>
</p>
