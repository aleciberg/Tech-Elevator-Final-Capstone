@model IEnumerable<Capstone.Models.Itinerary>

@{
    ViewData["Title"] = "ItineraryListByUser";
}

<h2>Your Itineraries</h2>

<p>
    <a asp-controller="Home" asp-action="CreateItinerary"><input type="button" value="New Itinerary" /></a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Past Itineraries
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <a asp-action="Itinerary" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
